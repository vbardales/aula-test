# https://eslint.org/docs/rules/
{
  "extends": "eslint:recommended",
  "env": {
    "mocha": true,
    "node": true,
    "es6": true,
  },
  "globals": {
    "sinon": true,
    "expect": true
  },
  "parser": "babel-eslint",
  "rules": {
    "no-console": 0,
    "array-bracket-spacing": [2, "never"],
    "arrow-parens": 0,
    "block-scoped-var": 2,
    "camelcase": 2,
    "computed-property-spacing": [2, "never"],
    "curly": 2,
    "comma-dangle": [2, "always-multiline"],
    "consistent-this": 2,
    "eol-last": 2,
    "eqeqeq": [2, "smart"],
    "keyword-spacing": [2, {"before": true, "after": true}],
    "max-depth": [1, 3],
    "max-len": [1, 180],
    "max-statements": [1, 40],
    "max-params": [1, 10],
    "new-cap": 1,
    "max-nested-callbacks": [2, 4],
    "no-extend-native": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-trailing-spaces": 2,
    "no-else-return": 1,
    "no-multiple-empty-lines": 0,
    "no-lonely-if": 1,
    "no-path-concat": 2,
    "no-unused-vars": [2, "all"],
    "no-undef": 1,
    "no-use-before-define": [2, "nofunc"],
    "no-floating-decimal": 1,
    "no-mixed-requires": [1, true],
    "no-useless-escape": 2,
    "no-nested-ternary": 1,
    "no-sync": 0,
    "object-curly-spacing": 0,
    "padded-blocks": 0,
    "quotes": [2, "single", "avoid-escape"],
    "space-unary-ops": 2,
    "spaced-comment": 0,
    "semi": [2, "always"],
  }
}
